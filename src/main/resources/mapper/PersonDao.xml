<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.abc.dao.PersonDao">
    <select id="queryPerson" resultType="com.example.abc.entity.Person">
        SELECT id,name,age
        FROM test
    </select>
    <select id="queryPersonById" resultType="com.example.abc.entity.Person">
        SELECT id,name,age
        FROM test
        WHERE
        id=#{id}
    </select>
    <insert id="insertPerson" useGeneratedKeys="true" keyProperty="id"
            keyColumn="id" parameterType="com.example.abc.entity.Person">
        INSERT INTO
        test(id,name,age)
        VALUES
        (#{id},#{name},#{age})
    </insert>
    <update id="updatePerson" parameterType="com.example.abc.entity.Person">
        update test
        <set>
            <if test="name!=null">name=#{name},</if>
            <if test="age!=null">age=#{age}</if>
        </set>
        where id=#{id}
    </update>
    <delete id="deletePerson">
        DELETE FROM
        test
        WHERE
        id=#{id}
    </delete>
</mapper>